<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= list_title %></h1>
</div>

<div class="box">

  <% new_list_items.forEach(function(item) { %>
  <form class="" action="/delete" method="post">

    <div class="item">
      <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
      <p><%= item.name %></p>
    </div>
    <input type="hidden" name="list_name" value="<%= list_title %>"></input>

  </form>

  <% }); %>

  <form class="item" action="/" method="post">
    <input type="text" name="new_item" placeholder="New Item" autocomplete="off">
    <button type="submit" name="list" value="<%= list_title %>"<%= list_title %>>+</button>
  </form>

</div>
<%- include("footer") -%>
